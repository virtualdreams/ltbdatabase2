<!DOCTYPE html>

<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="version" content="@ltbdb.Core.VersionInfo.ProductVersion" />

		<link type="text/css" href="@Url.Content("~/Content/material.css")" rel="stylesheet" />		
		<link type="text/css" href="@Url.Content("~/Content/layout.css")" rel="stylesheet" />
		<link type="text/css" href="@Url.Content("~/Content/navigation.css")" rel="stylesheet" />
		<link type="text/css" href="@Url.Content("~/Content/smoothness/jquery-ui.min.css")" rel="stylesheet" />
		<link type="text/css" href="@Url.Content("~/Content/jBox.css")" rel="stylesheet" />

		<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/Scripts/jBox.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>

		<link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />

		<style type="text/css">
			.ui-widget
			{
				font-size: 11pt;
			}
			.ui-tooltip
			{
				background: #000000;
				border: 0 none;
				color: #ffffff;
				opacity: 0.8;
				padding: 10px;
				font-size: 8pt;
				border-radius: 3px;
			}
			.ui-autocomplete 
			{
				max-height: 200px;
				overflow-y: auto; 
				overflow-x: hidden;
				z-index: 700;
			}
		</style>
	
		<title>@ViewBag.Title</title>
	</head>
	<body>
		<div class="wrapper">
			<div class="header">
				<a href="/">
					<div class="header-left">
						<h1 class="header-logo">
							Lustiges Taschenbuch Datenbank
						</h1>
					</div>
				</a>
				<div class="header-right">
					<div class="header-links">
						@*<a href="#">Impressum</a>*@
						@{Html.RenderAction("status", "account"); }
					</div>
					<div class="header-searchbox">
						<form action="@Url.Action("search", "home")" method="get">
							<input id="q" type="text" name="q" value="@ViewBag.Search" placeholder="Suche..." />
						</form>
					</div>
				</div>
			</div>

			<div class="nav">
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/all">Kategorien</a>
						<ul>
							@{Html.RenderAction("categories", "home"); }
						</ul>  
					</li>
					<li><a href="/tags">Tags</a>
						<ul>
							@{Html.RenderAction("tags", "home"); }
						</ul>
					</li>
					@if(Request.IsAuthenticated) {
					<li><a href="@Url.Action("create", "book")">Neues Buch</a></li>
					<li style="float: right;">
						<a href="@Url.Action("index", "home", new {area = "admin" })">Einstellungen</a>
					</li>
					}
				</ul>
			</div>

			<div class="content">
				@RenderBody()
			</div>

			<div class="footer">
				<div class="footer-copy">Copyright &copy; 2014 by <a href="http://stichelbiene.de">stichelbiene.de</a>. All rights reserved. Version <a href="https://github.com/virtualdreams/ltbdatabase2/commits">@ltbdb.Core.VersionInfo.FileVersion</a></div>
			</div>
		</div>
	</body>
</html>
