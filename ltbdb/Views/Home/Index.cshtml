@model ltbdb.Models.BookViewContainer
@using ltbdb.Models
@using ltbdb.Core.Helpers

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zuletzt hinzugefügt...</h2>
<ul class="book">
@foreach (var book in Model.Books) {
	<li>
		<a href="@Url.Action("view", "book", new { id = @book.Id, slug = book.Title.ToSlug() })">
			<div>
				<img src="@ImageStore.GetWebPath(book.Filename, ImageType.PreferThumbnail)" alt="Cover" />
			</div>
			<span>Nr. @book.Number - @book.Title</span>
		</a>
	</li>
	}
</ul>
