@model ltbdb.Models.BookViewContainer
@using ltbdb.Models
@using ltbdb.Core

@{
    ViewBag.Title = "Lustiges Taschenbuch - Datenbank";
    Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Header = "Home";
}

<div class="book">
	<ul>
	@foreach (var book in Model.Books) {
		<li>
			<a href="@Url.Action("view", "book", new { id = @book.Id })">
				<div class="img">
					<img src="@ImageStore.GetWebPath(book.Filename, ImageType.Thumbnail)" alt="Cover" />
				</div>
				<div class="header">Nr. @book.Number - @book.Name</div>
				<span>@book.Category.Name</span>
			</a>
		</li>
	}
	</ul>
</div>
