@{
	ViewBag.Title = "Statistik";
	ViewBag.Menu = "stats";
}

<div class="box">
	<h3>Statistik</h3>
	<div>
		Die Datenbank enthält <span id="books">-</span> Bücher in <span id="categories">-</span> Kategorien mit insgesamt <span id="stories">-</span> Geschichten. Die Inhalte wurden mit <span id="tags">-</span> Tags gekennzeichnet.
	</div>
</div>
<script type="text/javascript">
	$(function () {
		function getValue(url) {
			$.ajax({
				type: 'GET',
				dataType: 'json',
				url: url,
				statusCode: {
					401: function () {
						alert("Not authorized.");
					}
				},
				success: function (data) {
					$('#books').text(data.Books.Total);
					$('#categories').text(data.Categories.Used);
					$('#stories').text(data.Stories.Total);
					$('#tags').text(data.Tags.Used);
				}
			});
		}

		getValue('/api/stats/list');
	});
</script>
