@{
    ViewBag.Title = "Statistik";
}

<div class="box">
	<h3>Statistik</h3>
	<div>
		Die Datenbank enthält <span id="books"></span> Bücher in <span id="categories"></span> Kategorien mit insgesamt <span id="stories"></span> Geschichten. Die Inhalte sind mit <span id="tags"></span> Tags getaggt worden.
	</div>
</div>
<script type="text/javascript">
	$(function () {
		function getValue(url, id) {
			$.ajax({
				type: 'GET',
				dataType: 'json',
				url: url,
				statusCode: {
					401: function () {
						alert("Not authorized.");
					}
				},
				success: function (data) {
					id.text(data.total);
				}
			});
		}

		getValue('/api/stats/books', $('#books'));
		getValue('/api/stats/categories', $('#categories'));
		getValue('/api/stats/stories', $('#stories'));
		getValue('/api/stats/tags', $('#tags'));
	});
</script>
